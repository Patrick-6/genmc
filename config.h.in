#ifndef GENMC_CONFIG_H
#define GENMC_CONFIG_H

/* FIXME: split up the config.h.in file. */

/* Package information. */
#define PACKAGE_NAME "@PACKAGE_NAME@"
#define PACKAGE_BUGREPORT "@PACKAGE_BUGREPORT@"
#define PACKAGE_URL "@PACKAGE_URL@"
#define PACKAGE_VERSION "@PACKAGE_VERSION@"
#define GIT_COMMIT "@GIT_COMMIT@"

/* Include directories. */
#define INCLUDE_DIR "@INCLUDE_DIR@"
#define SRC_INCLUDE_DIR "@SRC_INCLUDE_DIR@"

/* Rust related defines. */
#define RUST_DIR "@RUST_DIR@"
#define RUSTC_PATH "@RUSTC_PATH@"
#define CARGO_PATH "@CARGO_PATH@"

/* Information about linked LLVM (undefined if not linked). */
#cmakedefine CLANGPATH "@CLANGPATH@"
#cmakedefine LLVM_BUILDMODE "@LLVM_BUILDMODE@"
#cmakedefine LLVM_VERSION "@LLVM_PACKAGE_VERSION@"

/* Enable/disable additional debug checks, prints and options. */
#cmakedefine ENABLE_GENMC_DEBUG

#endif /* GENMC_CONFIG_H */
